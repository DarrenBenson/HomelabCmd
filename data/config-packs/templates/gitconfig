# Git configuration
# Managed by HomelabCmd - customise user section

[init]
    defaultBranch = main

[core]
    editor = vim
    autocrlf = input
    whitespace = fix

[pull]
    rebase = true

[push]
    default = current
    autoSetupRemote = true

[fetch]
    prune = true

[diff]
    colorMoved = zebra

[merge]
    conflictstyle = diff3

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg = log --oneline --graph --decorate -10
    unstage = reset HEAD --
    last = log -1 HEAD
